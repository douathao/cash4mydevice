@require 'variables.styl'

p, a, label, input, textarea, body
  font-family font('body')

h1, h2, h3, h4, h5
  font-family font('header')

a
  color palette('primary', 'green', 'light')
  &:hover, &:focus
    color palette('primary', 'gold')
    text-decoration none

.box
  border 1px solid palette('primary', 'gold')
  padding 20px
  border-radius 10px
  margin-bottom 20px
  p
    margin 0

.fa-star
  color palette('primary', 'gold')

.satisfied-sellers
  position relative
  min-height 130px
  quote
    font-style italic
  .rate
    text-align right
    position absolute
    bottom 0
    right 20px

.stay-connect
  text-align center
  margin-bottom 20px
  h3
    font-family font('fancy')
    font-size 40px
  .fa.fa-long-arrow-right
    margin 0 20px
    color #000
  .fa
    margin 0 5px
    font-size: 30px
    color #ccc
  .fa-facebook-square
    &:hover
      color #3b5998
  .fa-yelp
    &:hover
      color #c41200
  .fa-envelope-o
    &:hover
      color palette('primary', 'gold')
/**************************************************
 * Header
 **************************************************/
header
  .logo
    margin: 15px auto
.top-nav-wrap
  background-color palette('primary', 'green')
  box-shadow 0 5px 5px #ccc
  a
    color #fff
    text-transform uppercase
    &:hover
      color palette('primary', 'gold')
  .navbar-toggle
    border-color palette('primary', 'gold')
    .icon-bar
      background-color: palette('primary', 'gold')


 hr
   border-top: 1px solid palette('primary', 'gold');

.first-step
  .arrow
    text-align center
    font-size 50px

/**************************************************
* Devices
**************************************************/
.device-model
  h4
    text-align center
.device
  width 144px
  height 300px
  &.iphone-5s
    background-image url('../images/devices/iphone-5s.png')
    &:hover
      background-image url('../images/devices/iphone-5s-hover.png')
  &.iphone-5c
    background-image url('../images/devices/iphone-5c.png')
    &:hover
      background-image url('../images/devices/iphone-5c-hover.png')
  &.iphone-5
    background-image url('../images/devices/iphone-5.png')
    &:hover
      background-image url('../images/devices/iphone-5-hover.png')
  &.iphone-4
    background-image url('../images/devices/iphone-4.png')
    &:hover
      background-image url('../images/devices/iphone-4-hover.png')
  &.galaxy-note-4
    background-image url('../images/devices/galaxy-note-4.png')
    &:hover
      background-image url('../images/devices/galaxy-note-4-hover.png')
  &.galaxy-note-3
    background-image url('../images/devices/galaxy-note-3.png')
    &:hover
      background-image url('../images/devices/galaxy-note-3-hover.png')
  &.galaxy-s5
    background-image url('../images/devices/galaxy-s5.png')
    &:hover
      background-image url('../images/devices/galaxy-s5-hover.png')
  &.galaxy-s4
    background-image url('../images/devices/galaxy-s4.png')
    &:hover
      background-image url('../images/devices/galaxy-s4-hover.png')
  &.galaxy-s3
    background-image url('../images/devices/galaxy-s3.png')
    &:hover
      background-image url('../images/devices/galaxy-s3-hover.png')

/**************************************************
 * Process
 **************************************************/
.process .step
  p, h4
    text-align center
  img
    margin: 0 auto


/**************************************************
 * Footer
 **************************************************/
footer.container
  border 1px solid palette('primary', 'green', 'light')
  padding 15px
  border-radius 10px
  text-align center
  margin 0 15px;
  p
    font-size 11px
    line-height: 12px
    margin: 0
  .nav li
    display inline-block
    float none
    margin 0
    a:hover
      background transparent

.grass
  background-image url('/images/grass.jpg')
  height 46px

/**************************************************
 * Small devices (tablets, 768px and up)
 **************************************************/
@media (min-width: 768px)
  @import 'sm.styl'

/**************************************************
 * Medium devices (desktops, 992px and up)
 **************************************************/
@media (min-width: 992px)
  @import 'md.styl'

/**************************************************
 * Large devices (large desktops, 1200px and up)
 **************************************************/
@media (min-width: 1200px)
  @import 'lg.styl'

/**************************************************
 * Override default bootstrap css
 **************************************************/
.top-nav-wrap .nav > li > a:hover,
.top-nav-wrap .nav > li > a:focus
  background-color transparent

.nav .nav-divider
  height 32px
  background-color palette('primary', 'gold');
  width 1px;

 footer
   .nav > li > a
     padding 0 15px
     margin-bottom 10px

.breadcrumb
  margin-top 15px
  margin-bottom 0